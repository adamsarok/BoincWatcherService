{
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=boincstats;Username=postgres;Password=your-password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "BoincHosts": [
    {
      "IP": "localhost",
      "Port": 31416,
      "Password": "your-password"
    }
  ],
  "MailSettings": {
    "SmtpHost": "smtp.example.com",
    "SmtpPort": 587,
    "SenderAddress": "sender@example.com",
    "UserName": "username",
    "Password": "password",
    "ToAddress": "recipient@example.com",
    "CronSchedule": "0 0 0 * * ?",
    "SendNotificationOnStates": [ "Down", "NoRunningTasks", "NoTasks" ]
  },
  "DatabaseSettings": {
    "CronSchedule": "0 * * * * ?"
  },
  "FunctionAppSettings": {
    "BaseUrl": "https://your-function-app.azurewebsites.net",
    "FunctionKey": "your-function-key"
  },
  "feature_management": {
    "feature_flags": [
      {
        "id": "TaskJob",
        "enabled": false
      },
      {
        "id": "MailService",
        "enabled": false
      },
      {
        "id": "FunctionApp",
        "enabled": true
      }
    ]
  }
}
